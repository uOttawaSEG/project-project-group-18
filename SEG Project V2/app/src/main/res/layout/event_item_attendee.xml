<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="352dp"
        android:layout_height="145dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Horizontal layout for buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_eventTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Title:"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textview_eventDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event description:"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textview_eventDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Date:"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textview_eventRequestStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status of your request:"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_details"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Details"
                    android:textSize="16dp" />

                <Space
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/button_cancel_event"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Cancel request"
                    android:textSize="16dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
